<div class="no-page-header-login page-content-centered">
  <%= form_tag password_resets_path, :role => "form" do %>

    <div class="form-group">
      <%= label_tag :email, t(:label_email_yours)  %>
      <%= text_field_tag :email, nil, :size => 30, :class => "form-control" %>
    </div>
    <div class="form-group">
      <div class="pull-right">
        <%= submit_tag t(:label_continue), :class => "btn btn-danger" %>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</div>
