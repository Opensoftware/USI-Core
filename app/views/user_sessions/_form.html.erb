<%= form_for @user_session, :html => {:role => "form"} do |f| %>
  <div class="form-group">
    <%= f.label :email, t(:label_email), :class => "control-label" %>
    <%= f.text_field :email, :class => "form-control", :placeholder => t(:label_email) %>
  </div>
  <div class="form-group">
    <%= f.label :password, t(:label_password), :class => "control-label" %>
    <%= f.password_field :password, :class => "form-control", :placeholder => t(:label_password) %>
  </div>
  <% if params[:controller] =~ /user_sessions/ %>
    <div class="form-group">
      <div class="pull-right">
        <p>
          <%=raw t(:label_lost_password, here: link_to(t(:label_here), new_password_reset_path)) %>
        </p>
      </div>
    </div>
  <% end %>
  <div class="clearfix"></div>
  <div class="form-group">
    <div class="pull-right">
      <button type="submit" class="btn btn-danger">
        <%=t :label_login_short%>
      </button>
    </div>
  </div>
<% end %>