<% content_for :additional_javascript_libraries do %>
  <%= javascript_include_tag "enrollment_semester" %>
<% end %>
<% content_for :content_heading do %>
  <div class="row">
    <div class="col-md-9">
      <h4>
        <%=t :label_enrollment_manage%>
      </h4>
    </div>
    <div class="col-md-7">
      <div class="pull-right">
        <%= button_to t(:label_save), (enrollment_semester_path(@semester)), :form => {:class => "form-inline" }, :class => "btn btn-danger submit-form" %>
      </div>
    </div>
  </div>
<% end %>
<% content_for :content_footnote do %>
  <div class="pull-right">
    <%= button_to t(:label_save), (enrollment_semester_path(@semester)), :form => {:class => "form-inline" }, :class => "btn btn-danger submit-form" %>
  </div>
  <div class="clearfix"></div>
<% end %>


<%= form_for @semester do |f| %>
  <div class="section">
    <div class="subsection-header ">
      <h4><%=t :label_thesis_plural %></h4>
    </div>
    <div class="form-group">
      <div class="col-md-8">
        <%= f.label :thesis_enrollments_begin, t(:label_enrollment_begin) %>
        <div class="input-append date form_datetime">
          <%= f.text_field :thesis_enrollments_begin, :value => l(@semester.thesis_enrollments_begin), :class => "form-control datetime"  %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>

      </div>
      <div class="col-md-8">
        <%= f.label :thesis_enrollments_end, t(:label_enrollment_end) %>
        <%= f.text_field :thesis_enrollments_end, :value => l(@semester.thesis_enrollments_end), :class => "form-control datetime"  %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="section">
    <div class="subsection-header ">
      <h4><%=t :label_thesis_plural %></h4>
    </div>
    <div class="form-group">
      <div class="col-md-8">
        <%= f.label :elective_enrollments_begin, t(:label_enrollment_begin) %>
        <%= f.text_field :elective_enrollments_begin, :value => l(@semester.elective_enrollments_begin), :class => "form-control datetime"  %>
      </div>
      <div class="col-md-8">
        <%= f.label :elective_enrollments_end, t(:label_enrollment_end) %>
        <%= f.text_field :elective_enrollments_end, :value => l(@semester.elective_enrollments_end), :class => "form-control datetime"  %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
<% end %>